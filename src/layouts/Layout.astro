---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="https://www.workfindy.com/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script data-goatcounter="https://ejmercado.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
  </head>
  <body class="bg-neutral-950 text-neutral-200 h-screen">
    <!-- <Header /> -->
    <main class="text-sm md:text-base">
      <slot />
    </main>
  </body>
</html>
